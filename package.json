{
  "name": "pismflix",
  "version": "0.1.0",
  "description": "Pismflix - Netflix Roulette Portal",
  "license": "MIT",
  "keywords": [
    "Pismflix",
    "Netflix Roulette Portal",
    "Pismo Front-end test",
    "angular 2",
    "angular"
  ],
  "homepage": "http://rodrigopandini.com/pismflix",
  "author": {
    "name": "Rodrigo Pandini",
    "email": "rodrigopandini@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rodrigopandini/pismflix.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "start:prod": "ng serve --open --environment=prod",
    "build": "ng build --sourcemaps --output-hashing=all",
    "build:prod": "ng build --target=production --environment=prod --output-hashing=all --no-progress",
    "lint": "ng lint --format stylish",
    "test": "ng test",
    "test:ci": "ng test --no-progress --browsers SL_CHROME,SL_SAFARI10,SL_FIREFOX,SL_IOS10 --single-run",
    "e2e": "ng e2e --no-watch ---no-live-reload",
    "e2e:ci": "ng e2e --no-progress --no-watch --target=production --environment=prod --no-live-reload",
    "deploy": "npm run build:prod && firebase deploy --token ${FIREBASE_TOKEN}",
    "deploy:ci": "npm run build:prod && scripts/ci/deploy.sh",
    "cover": "ng test --watch=false --code-coverage",
    "compodoc": "./node_modules/.bin/compodoc -d docs -p src/tsconfig.json"
  },
  "dependencies": {
    "@angular/common": "^2.4.9",
    "@angular/compiler": "^2.4.9",
    "@angular/core": "^2.4.9",
    "@angular/flex-layout": "latest",
    "@angular/forms": "^2.4.9",
    "@angular/http": "^2.4.9",
    "@angular/material": "latest",
    "@angular/platform-browser": "^2.4.9",
    "@angular/platform-browser-dynamic": "^2.4.9",
    "@angular/router": "^3.4.9",
    "@turf/helpers": "^3.7.5",
    "angular-2-local-storage": "^1.0.1",
    "angular2-mdl": "^2.13.2",
    "core-js": "^2.4.1",
    "hammerjs": "^2.0.8",
    "intl": "^1.2.5",
    "ngx-rating": "0.0.9",
    "reflect-metadata": "^0.1.9",
    "rxjs": "^5.2.0",
    "ts-md5": "^1.2.0",
    "zone.js": "^0.7.6"
  },
  "devDependencies": {
    "@angular/cli": "latest",
    "@angular/compiler-cli": "^2.4.9",
    "@angular/tsc-wrapped": "latest",
    "@types/hammerjs": "^2.0.33",
    "@types/jasmine": "^2.5.38",
    "@types/jasmine-expect": "^2.0.29",
    "@types/node": "^6.0.48",
    "codelyzer": "3.0.0-beta.0",
    "compodoc": "0.0.41",
    "firebase-tools": "^3.3.0",
    "jasmine": "^2.5.2",
    "jasmine-core": "^2.5.2",
    "jasmine-expect": "^3.0.1",
    "jasmine-spec-reporter": "^3.2.0",
    "karma": "^1.4.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-sauce-launcher": "^1.1.0",
    "protractor": "^5.1.1",
    "protractor-accessibility-plugin": "^0.3.0",
    "protractor-console-plugin": "^0.1.1",
    "ts-helpers": "^1.1.2",
    "ts-node": "^2.0.0",
    "tslint": "^4.5.1",
    "typescript": "2.0.10",
    "yargs": "^6.6.0"
  },
  "engines": {
    "node": ">= 7.4"
  }
}
